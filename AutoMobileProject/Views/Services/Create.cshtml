@model AutoMobileProject.Models.ViewModels.CarAndServicesViewModel
@{
    ViewData["Title"] = "Create";
}

<br />
@Html.Partial("_CarDetailsInService")
<hr />

<h4>Service</h4>
<div class="row">
    <form asp-action="Create">
        <input asp-for="CarId" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-5">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="NewService.Miles" class="control-label"></label>
                </div>
                <div class="col-sm-9" style="padding-bottom: 5px;">
                    <input asp-for="NewService.Miles" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="NewService.Price" class="control-label"></label>
                </div>
                <div class="col-sm-9" style="padding-bottom: 5px;">
                    <input asp-for="NewService.Price" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-5" style="padding-bottom: 5px;">
                    <input type="submit" value="Add Service" class="btn btn-sm btn-primary form-control" />
                </div>
            </div>
        </div>
        <div class="col-sm-5 col-sm-offset-2">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="NewService.Details" class="control-label"></label>
                </div>
                <div class="col-sm-9" style="padding-bottom: 5px;">
                    <input asp-for="NewService.Details" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="NewService.ServiceTypeId" class="control-label"></label>
                </div>
                <div class="col-sm-9" style="padding-bottom: 5px;">
                    <select asp-for="NewService.ServiceTypeId" asp-items="@(new SelectList(Model.ServiceTypeses,"Id","ServiceName"))" class="form-control"></select>
                </div>
            </div>
        </div>
    </form>
</div>


<br />
<div class="row">
    <h4>Pass Service Records</h4>
    <br />
    @Html.Partial("_DisplayPastServices", Model)
    <div class="row">
        @if (!Model.PastServices.Any())
        {
            <div class="col-sm-12 text-primary" style="padding-bottom: 20px;">
                No past service records
            </div>  
        }
        <div class="col-sm-3">
            <a asp-controller="Car" asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-sm btn-success">Back to lists</a>
        </div>
        
        @if (Model.PastServices.Count() > 4)
        {
            <div class="pull-right" style="padding-right: 20px;">
                 <a asp-action="Index" asp-route-carId="@Model.CarId" class="text-primary">Load all</a>
            </div>  
        }
    </div>
</div>