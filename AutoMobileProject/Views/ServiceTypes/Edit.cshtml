@model AutoMobileProject.Models.ServiceTypes
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Service Type</h2>
<hr />

<form asp-action="Edit">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ServiceName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="ServiceName" class="form-control">
                    </div>
                </div>
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-sm btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>