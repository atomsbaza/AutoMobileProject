@model AutoMobileProject.Models.Cars
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Car Details</h2>
<hr />

<div class="form-border">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Vin" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Vin" disabled class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Make" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Make" disabled class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Model" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Model" disabled class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Style" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Style" disabled class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Year" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Year" disabled class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Miles" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Miles" disabled class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Color" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Color" disabled class="form-control">
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-userId="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
        <a asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-sm btn-success">Back to List</a>
    </div>
</div>